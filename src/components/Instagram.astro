---
import "../styles/style.css";
---

<section id="instagram">
  <div id="overskrift">
    <h3>Instagram</h3>
  </div>
  <div>
    <hr />
    <a href="https://www.instagram.com/omada.wine/?_ga=2.42469542.2006333102.1682262415-578127396.1680159185" target="_blank">
      <div id="tag">
        <h4 id="at">@</h4>
        <h4>omada.wine</h4>
      </div></a
    >
  </div>
  <div id="insta">
    <a href="https://www.instagram.com/omada.wine/?_ga=2.42469542.2006333102.1682262415-578127396.1680159185" target="_blank"> <img src="../images/insta-1.png" alt="SoMe billede" /></a>
    <a href="https://www.instagram.com/omada.wine/?_ga=2.42469542.2006333102.1682262415-578127396.1680159185" target="_blank"> <img src="../images/insta2.png" alt="SoMe billede" /></a>
    <a href="https://www.instagram.com/omada.wine/?_ga=2.42469542.2006333102.1682262415-578127396.1680159185" target="_blank"> <img src="../images/insta3.png" alt="SoMe billede" /></a>
  </div>
</section>

<style>
  /* Mobile first */

  #tag {
    display: flex;
    text-align: right;
    justify-content: right;
  }

  h4 {
    color: var(--midnight);
  }

  #at {
    color: var(--midnight);
  }

  hr {
    width: 60vw;
    margin-left: 40%;
  }

  #insta {
    display: flex;
    justify-content: space-evenly;
    align-content: center;
  }

  img {
    width: 108px;
    height: 110px;
    margin-top: 5%;
    margin-bottom: 5%;
  }

  #overskrift {
    display: flex;
    text-align: center;
    justify-content: center;
    margin-top: 5%;
  }
  /* tablet format (over 600px)*/
  @media (min-width: 600px) {
    img {
      width: 208px;
      height: 210px;
    }
  }

  /* desktop format (over 900px)*/
  @media (min-width: 900px) {
    img {
      width: 308px;
      height: 310px;
    }
  }

  /* sørger for at sektionerne på en meget stor skærm ikke bliver for brede */
  section {
    max-width: 1500px;
  }
</style>
